<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/alertDialogIcon" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Date"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_sign"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="16dp"
        android:text="Rs."
        android:textColor="@color/colortext"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_sign"
        app:layout_constraintTop_toBottomOf="@+id/tv_date" />

    <TextView
        android:id="@+id/tv_verb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="verb"
        android:textColor="@color/colortext"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_amount"
        app:layout_constraintStart_toEndOf="@+id/tv_amount" />

    <TextView
        android:id="@+id/tv_noun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noun"
        android:textColor="@color/colortext"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_verb1"
        app:layout_constraintStart_toEndOf="@+id/tv_verb1" />
</android.support.constraint.ConstraintLayout>